@model ArticolModel

@{
    ViewData["Title"] = "Adauga Articol";
    List<SelectListItem> categorii = ViewBag.Domenii;
}

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Titlu" class="control-label">Titlu</label>
            <input asp-for="@Model.Titlu" class="form-control" />
            <span asp-validation-for="@Model.Titlu" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Autor" class="control-label">Author</label>
            <input asp-for="@Model.Autor" class="form-control" />
            <span asp-validation-for="@Model.Autor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Continut" class="control-label">Continut</label>
            <input asp-for="@Model.Continut" class="form-control" />
            <span asp-validation-for="@Model.Continut" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Domeniu.Id" class="control-label">Category Id</label>
            <select asp-for="@Model.Domeniu.Id" asp-items="@categorii" class="form-control"></select>
            <span asp-validation-for="@Model.Domeniu.Id" class="text-danger"></span>
        </div>
        <br />
        <input type="submit" value="Adauga" />
        <br />
    </form>
</div>